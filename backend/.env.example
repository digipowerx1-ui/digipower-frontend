# API Configuration
API_PORT=3000

# Massive.com API Key
# Get your API key from: https://massive.com/developers
MASSIVE_API_KEY=your_api_key_here

# Node Environment
NODE_ENV=development

# Mailchimp Configuration
# Get your API key from: Account → Extras → API Keys
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
# Server prefix from your Mailchimp account URL (e.g., us19, us20)
MAILCHIMP_SERVER_PREFIX=us19
# Audience/List ID from: Audience → All contacts → Settings
MAILCHIMP_LIST_ID=your_audience_list_id_here

# Strapi CMS Configuration
STRAPI_API_URL=https://thankful-miracle-1ed8bdfdaf.strapiapp.com/api

# Cron Job Configuration
# Enable/disable cron jobs (set to 'true' to enable)
CRON_ENABLED=false
# Timezone for cron scheduling
CRON_TIMEZONE=America/New_York
# Enable dry run mode (no emails sent, only logging)
DRY_RUN=false

# Admin Configuration
ADMIN_EMAIL=admin@digipowerx.com
# Enable admin alerts on errors
ADMIN_ALERT_ON_ERROR=true

# Testing Configuration
# API key for manual cron trigger endpoint (generate a secure random string)
CRON_API_KEY=your_secure_api_key_here
